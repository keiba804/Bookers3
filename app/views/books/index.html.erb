<h1>Bookers</h1>
<table>
	<tr>
		<th>title</th>
		<th>body</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<th><%= book.title %></th>
			<th><%= book.body %></th>
			<th><%= link_to "show", book_path(book.id) %></th>
			<th><%= link_to "edit", edit_book_path(book.id) %></th>
			<th><%= link_to "destroy", book_path(book.id), method: :delete %></th>
		</tr>
	<% end %>
</table>

<!-- form_for部分 -->
<h2>New book</h2>
<% if @book.errors.any? %>
     <div class="alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'create book' %>
<% end %>
